<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/txtLeaveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri, 28th Feb 2025"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtLeaveType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual - Unpaid Leave"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/txtLeaveDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Day Leave"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/txtLeaveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textSize="14sp"
            android:textColor="#E42020"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_delete_24"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_edit"
                android:padding="5dp"
                android:layout_marginStart="5dp" />

            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details"
                android:backgroundTint="@color/primary"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginStart="5dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
